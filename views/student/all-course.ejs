    <div id="course-details-modal" class="fixed inset-0 z-50 flex items-center justify-center hidden">
        <div class="absolute inset-0 bg-gray-900 bg-opacity-50"></div>
        <div class="bg-white p-4 rounded-lg max-w-md w-full">
            <!-- แสดงรายละเอียดของคอร์ส และจำนวนคนสมัคร -->
            <h2 class="text-2xl font-semibold mb-2">รายละเอียดคอร์ส</h2>
            <p id="course-description" class="text-gray-700 mb-4"></p>
            <p>จำนวนคนสมัคร: <span id="enroll-count" class="font-semibold">0</span></p>
            <button id="enroll-button"
                class="mt-4 bg-blue-500 text-white rounded-full py-2 px-4 text-center font-semibold hover:bg-blue-600">Enroll</button>
            <button id="close-modal-button" class="mt-4 text-gray-600 hover:text-gray-800">ปิด</button>

        </div>
    </div>
    <script>
        // ดึงข้อมูลคอร์สจาก API หรือข้อมูลที่คุณมี
        const courses = [
            {
                name: "Course 1",
                description: "Description of Course 1",
                enrollCount: 50, // จำนวนคนสมัคร
            },
            // เพิ่มข้อมูลคอร์สอื่นๆ
        ];

        // รายละเอียดของคอร์สที่ถูกเลือก
        let selectedCourse = null;

        // ปุ่ม "ดูรายละเอียด" บนบัตรคอร์ส
        const detailButtons = document.querySelectorAll(".course-details-button");
        detailButtons.forEach((button, index) => {
            button.addEventListener("click", () => {
                // เลือกคอร์สที่ถูกคลิก
                selectedCourse = courses[index];

                // แสดงรายละเอียดของคอร์สในโมเดล
                const modal = document.getElementById("course-details-modal");
                const description = document.getElementById("course-description");
                const enrollCount = document.getElementById("enroll-count");

                description.textContent = selectedCourse.description;
                enrollCount.textContent = selectedCourse.enrollCount;

                // แสดงโมเดล
                modal.classList.remove("hidden");
            });
        });

        // ปุ่ม "Enroll" ในโมเดล
        const enrollButton = document.getElementById("enroll-button");
        enrollButton.addEventListener("click", () => {
            // เพิ่มผู้สมัครโดยเพิ่ม 1 จากค่าปัจจุบัน
            selectedCourse.enrollCount += 1;

            // อัปเดตจำนวนคนสมัครในโมเดล
            const enrollCount = document.getElementById("enroll-count");
            enrollCount.textContent = selectedCourse.enrollCount;
        });

        // ปุ่ม "ปิด" ในโมเดล
        const closeModelButton = document.getElementById("close-modal-button");
        closeModelButton.addEventListener("click", () => {
            // ปิดโมเดล
            const modal = document.getElementById("course-details-modal");
            modal.classList.add("hidden");
        });

    </script>

